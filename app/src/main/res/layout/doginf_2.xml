<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DogInf_2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="return"
            android:id="@+id/back_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Golden Retriever"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:layout_marginTop="0dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/dogPicture"
                    android:layout_width="145dp"
                    android:layout_height="131dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="239dp"
                    android:layout_marginBottom="40dp"
                    app:srcCompat="@drawable/img" />


                <TextView
                    android:id="@+id/textHeightTitle"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="115dp"
                    android:text="Height"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textHeightMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="66dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textHeightFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textHeightMale"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="27dp"
                    android:text="" />

                <!-- Display weight information -->

                <TextView
                    android:id="@+id/textWeightTitle"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textHeightFemale"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="149dp"
                    android:text="Weight"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textWeightMale"
                    android:layout_width="147dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textWeightTitle"
                    android:layout_alignBottom="@+id/imageView4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="63dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginBottom="23dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textWeightFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="52dp"
                    android:text="" />

                <!-- Display life expectancy information -->

                <TextView
                    android:id="@+id/textLifeExpectancyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="95dp"
                    android:layout_marginBottom="21dp"
                    android:text="Life Expectancy"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textLifeExpectancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="168dp"
                    android:layout_marginEnd="105dp"
                    android:text="10-12 years" />


                </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp"
            android:text="Nutrition"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:layout_marginTop="-40dp"
            app:srcCompat="@drawable/img_1" />

        <TextView
            android:id="@+id/nutrition"
            android:layout_width="wrap_content"
            android:layout_height="201dp"
            android:layout_marginLeft="55dp"

            android:layout_marginTop="-10dp"
            android:gravity="right|fill_horizontal"
            android:text="" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="52dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/img_2" />

        <TextView
            android:id="@+id/exerciseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-66dp"

            />

        <TextView
            android:id="@+id/exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="0dp"

            android:text="" />












    </LinearLayout>

</ScrollView>
